<Window x:Class="BetterNotifications.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300" Height="100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        >
    <Border Background="#FF2E2E2E" CornerRadius="10" Padding="10" Opacity="0.9">
        <StackPanel>
          <DockPanel LastChildFill="False">
            <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="16" Foreground="White"/>
            <Button Click="XPressed" DockPanel.Dock="Right">
              X
            </Button>
          </DockPanel>
            <TextBlock x:Name="ContentText" FontSize="14" Foreground="White" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>

